<view class="goods">
  <view class="menu-wrapper">
    <scroll-view scroll-y="true" style="height: 500px;">
      <view wx:for="{{goods}}" class="menu-item border-1px" bindtap="selectMenu" data-item-index="{{index}}">
        <view class="text">
          {{item.name}}
        </view>
      </view>
    </scroll-view>
  </view>

  <scroll-view scroll-y="true" style="height: 500px;" scroll-into-view="{{toView}}" class="items-wrapper">
    <view wx:for="{{items}}" class="food-list food-list-hook" wx:for-index="parentIndex">
      <view id="order{{parentIndex}}" class="title">{{item.name}}</view>
      <view wx:for="{{item.items}}" class="food-item" wx:for-item="food" data-food="{{food}}">
        <view class="icon">
          <image src="{{item.icon}}" style="width: 57px;height: 57px"></image>
        </view>
        <view class="content">
          <view class="name">{{item.name}}</view>
          <view class="desc">{{item.description}}</view>
          <view class="extra">
            <text class="count">剩余{{item.count}}</text>
          </view>
        </view>
      </view>
    </view>

  </scroll-view>

