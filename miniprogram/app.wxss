/* app.wxss */

page {
  background-color: #f6f6f6;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page {
  align-items: center;
  background-color: #f6f6f6;
  box-sizing: border-box;
  flex-direction: column;
  font-size: 16px;
  justify-content: flex-start;
}

.page__hd {
  padding: 15px 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

.weui-form-preview {
  margin: 10rpx;
}
